[module/playerctl]
type = custom/script

; Available tokens:
;   %counter%
; Command to be executed (using "/usr/bin/env sh -c [command]")
exec = printf '%s by %s from [%s]' "$(playerctl metadata xesam:title 2>/dev/null)" "$(playerctl metadata xesam:artist 2>/dev/null)" "$(playerctl metadata xesam:album 2>/dev/null)"

; Conditional command that, if defined, needs to exit successfully
; before the main exec command is invoked.
; Default: ""
exec-if = playerctl status 2>/dev/null && test ! -z "$(playerctl metadata xesam:title 2>/dev/null)"

; Will the script output continous content?
; Default: false
tail = false

; Seconds to sleep between updates
; Default: 2 (0 if `tail = true`)
interval = 4

; Available tags:
;   <output> - deprecated
;   <label> (default)
format = <label>
format-background = #999
format-foreground = #000
format-padding = 4
format-margin = 1

; Available tokens:
;   %output%
; Default: %output%
label = ï€ %output%

; Available tokens:
;   %counter%
;
; "click-(left|middle|right)" will be executed using "/usr/bin/env sh -c [command]"
click-left = playerctl play-pause
click-middle = playerctl previous
click-right = playerctl next

; Available tokens:
;   %counter%
;
; "scroll-(up|down)" will be executed using "/usr/bin/env sh -c [command]"
; scroll-up = echo scroll up %counter%
; scroll-down = echo scroll down %counter%


